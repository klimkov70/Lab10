#include <iostream> 

#include <cstdlib> 

#include <ctime> 

 int main() 

{ 

int N, k; 

 std::cout << "Введите верхнюю границу чисел (N): "; 

 std::cin >> N; std::cout << "Введите количество попыток (k): "; 

 std::cin >> k;

srand(time(0)); 

int secretNumber = rand() % N + 1; 

 int guess; bool guessed = false; 

 for (int i = 0; i < k; i++) 

{ 

 std::cout << "Попытка #" << i + 1 << ": "; 

 std::cin >> guess; 

 if (guess == secretNumber) 

{ 

 guessed = true; break; 

 }

 else if (guess < secretNumber) 

{

 std::cout << "Загаданное число больше\n"; 

 }

 else { std::cout << "Загаданное число меньше\n"; 

 }

 }

 if (guessed) { std::cout << "Вы угадали!\n"; 

 }

 else { std::cout << "Попытки закончились. Загаданное число было: " << secretNumber << "\n"; 

 }

 return 0; 

}
